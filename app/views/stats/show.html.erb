<%- model_class = Stat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:patient_id) %>:</strong></dt>
  <dd><%= @stat.patient_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:temp) %>:</strong></dt>
  <dd><%= @stat.temp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:systolic) %>:</strong></dt>
  <dd><%= @stat.systolic %></dd>
  <dt><strong><%= model_class.human_attribute_name(:diastolic) %>:</strong></dt>
  <dd><%= @stat.diastolic %></dd>
  <dt><strong><%= model_class.human_attribute_name(:heart_rate) %>:</strong></dt>
  <dd><%= @stat.heart_rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resp_rate) %>:</strong></dt>
  <dd><%= @stat.resp_rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:noted_at) %>:</strong></dt>
  <dd><%= @stat.noted_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              patient_stats_path(@patient), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_patient_stat_path(@patient, @stat), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              patient_stat_path(@patient, @stat),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
